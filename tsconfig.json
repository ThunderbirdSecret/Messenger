{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types", "typings/app.d.ts", "typings/hbs.d.ts"],
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "target": "es2021",
    "forceConsistentCasingInFileNames": true,
  },
  "ts-node": {
    "files": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src",
    "src/typing/hbs.d.ts",
    "src/typing/app.d.ts"
  ],
  "lib": [
    "ESNext",
    "DOM"
  ]
}
