<div class="flex flex-col ">
    {{#if selectedChat }}
        <div class="flex items-center justify-center h-cover ">
            <div class="flex flex-col customw h-[670px] bg-transparent text-white py-14 px-8 overflow-y-auto scrollbar">
                    {{#each messages}}
                        {{{this}}}
                    {{/each}}
            </div>
        </div>
        <div class="absolute bottom-0 flex p-4 customw ml-auto">
            {{{dropdown}}}
            {{{dropbutton}}}
            {{{input}}}
            {{{button}}}
        </div>
    {{else}}
       <div  class="flex min-h-[800px] text-center">
            <h3 class="m-auto">Create or Select Chat</h3>
        </div>
    {{/if}}
</div>
